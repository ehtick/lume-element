{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"lib": ["dom", "es2015"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2017",
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"jsx": "react",
		"jsxFactory": "h",

		// Need this to skip errors with Stencil type definitions for now.
		"skipLibCheck": true
	},
	"include": ["src"]
}
